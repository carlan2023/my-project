doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sales List - MWF
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css' rel='stylesheet')
  link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Playfair+Display:wght@600&display=swap' rel='stylesheet')
  link(href='/css/style.css' rel='stylesheet')  
body
  section.container.py-5
    .row.justify-content-center
      .col-lg-7
        .card.p-4.p-lg-5
          .text-center.mb-4
            i.fas.fa-user-tie.fa-3x.mb-3(style='color: #ff6219')
            h2.brand-title.fw-bold Sigin
            p.text-muted Fill in the details to signin
          form#managerForm(action='/login' method='post' novalidate='')
            .mb-3
              label.form-label Email
              input#email.form-control(type='email' required='' name ="email")
              .invalid-feedback Enter a valid email.
            .mb-3
              label.form-label Password
              input#password.form-control(type='password' required='' name='password')
              .invalid-feedback
                | Password must have uppercase, lowercase, digit, min 6 chars.
            button.btn.btn-primary.w-100(type='submit')
              i.fas.fa-user-check
              |  Login
