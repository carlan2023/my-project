include layout-1.pug
section.container.py-5
  h2.brand-title.text-center.mb-5 Record a Sale
  .card.shadow-lg.p-4.mb-5
    form#salesForm.row.g-3(action="/stock/addSale" method='post')
      .mb-3
        label.form-label Category
        select#category.form-select(required='' name ='category')
          option(value='' selected='' disabled='') Choose category
          option(value='Chairs') Chairs
          option(value='Tables') Tables
          option(value='Cabinets') Cabinets
          option(value='Shelves') Shelves
          option(value='Others') Raw Materials
        .invalid-feedback Please select a category.
      .col-md-6
        label.form-label Customer Name
        input#customer.form-control(type='text' required='' name='customer')
      .col-md-6
        label.form-label Sales Agent
        input#agent.form-control(type='text' required='' name='agent')
      .col-md-4
        label.form-label Product Type
        select#productType.form-select(required='' name='type')
          option(value='wood') Wood
          option(value='furniture') Furniture
      .col-md-4
        label.form-label Product Name
        input#productName.form-control(type='text' required='' name='product')
      .col-md-4
        label.form-label Quantity
        input#quantity.form-control(type='number' required='' name='quantity')
      .col-md-3
        label.form-label Unit Price
        input#unitPrice.form-control(type='number' required='' name='price')
      .col-md-3
        label.form-label Transport
        select#transport.form-select(name='transport')
          option(value='no') No
          option(value='yes') Yes (+5%)
      .col-md-3
        label.form-label Payment Type
        select#payment.form-select(required='' name='method')
          option(value='cash') Cash
          option(value='cheque') Cheque
          option(value='bank') Bank Overdraft
      .col-md-3
        label.form-label Date
        input#date.form-control(type='date' required='' name='date')
      .col-12.text-center
        button.btn.btn-primary(type='submit')
          i.fas.fa-receipt
          |  Record Sale
